<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- Application display name -->
  <display-name>Student Course Registration System</display-name>

  <!-- Welcome file list -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Servlet for payment processing -->
  <servlet>
    <servlet-name>PaymentServlet</servlet-name>
    <servlet-class>com.studentcourse.servlet.PaymentServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Servlet mapping for payment processing -->
  <servlet-mapping>
    <servlet-name>PaymentServlet</servlet-name>
    <url-pattern>/processPayment</url-pattern>
  </servlet-mapping>

  <!-- Servlet for refund processing -->
  <servlet>
    <servlet-name>RefundServlet</servlet-name>
    <servlet-class>com.studentcourse.servlet.RefundServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <!-- Servlet mapping for refund processing -->
  <servlet-mapping>
    <servlet-name>RefundServlet</servlet-name>
    <url-pattern>/processRefund</url-pattern>
  </servlet-mapping>

  <!-- Servlet for viewing payment history -->
  <servlet>
    <servlet-name>HistoryServlet</servlet-name>
    <servlet-class>com.studentcourse.servlet.HistoryServlet</servlet-class>
    <load-on-startup>3</load-on-startup>
  </servlet>

  <!-- Servlet mapping for payment history -->
  <servlet-mapping>
    <servlet-name>HistoryServlet</servlet-name>
    <url-pattern>/viewHistory</url-pattern>
  </servlet-mapping>

</web-app>
