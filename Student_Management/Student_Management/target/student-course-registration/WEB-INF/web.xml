<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>StudentCourseRegistration</display-name>

  <!-- RegisterServlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.academy.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- LoginServlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.academy.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- ProfileServlet -->
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>com.academy.servlet.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>

  <!-- CourseSelectionServlet -->
  <servlet>
    <servlet-name>CourseSelectionServlet</servlet-name>
    <servlet-class>com.academy.servlet.CourseSelectionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CourseSelectionServlet</servlet-name>
    <url-pattern>/courseSelection</url-pattern>
  </servlet-mapping>

  <!-- PaymentServlet -->
  <servlet>
    <servlet-name>PaymentServlet</servlet-name>
    <servlet-class>com.academy.servlet.PaymentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentServlet</servlet-name>
    <url-pattern>/payment</url-pattern>
  </servlet-mapping>

</web-app>
